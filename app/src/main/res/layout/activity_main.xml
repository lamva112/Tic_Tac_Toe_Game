<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343e56"
    tools:context=".MainActivity">
    
    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImagine5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/btn5"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImagine4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/btn5"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImagine6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn5"
        android:background="#f69e78"
        android:layout_marginBottom="8dp"/>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn5"
        android:background="#f69e78"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn5"
        android:background="#f69e78"
        android:layout_marginRight="-14dp"/>

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn5"
        android:background="#f69e78"
        android:layout_marginLeft="-14dp"/>


    <Button
        android:id="@+id/reset"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="reset"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/teal_700"/>

    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn5"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImagine8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn5"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/btn8"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImagine7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/btn5"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/btn8"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImagine9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImagine2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/btn2"
        android:layout_centerInParent="true"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImagine1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/btn2"
        android:layout_centerInParent="true"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImagine3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/ScoreX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score X :- 0"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ScoreY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score Y :- 0"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>


    </LinearLayout>





</RelativeLayout>